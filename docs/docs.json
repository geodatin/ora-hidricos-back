{
    "openapi": "3.0.0",
    "info": {
        "title": "Ora Hydric Documentation",
        "description": "This is an API for the Ora Hydric Module",
        "version": "1.0.0",
        "contact": {
            "email": "administrativo@geodatin.com"
        }
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "paths": {
        "/territory/{name}": {
            "get": {
                "tags": [
                    "Territory"
                ],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Search string for the territory",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "summary": "Search Territory",
                "description": "Search for the territory with like strings",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "type": {
                                                "type": "string"
                                            },
                                            "code": {
                                                "type": "integer"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/waterSurface/statistics/{territoryType}": {
            "get": {
                "description": "Return the statistics for the territory",
                "tags": [
                    "Water Surface"
                ],
                "summary": "Water Surface statistics",
                "parameters": [
                    {
                        "name": "territoryType",
                        "in": "path",
                        "description": "Territory Type",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "code",
                        "in": "query",
                        "description": "Territory Code",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "currentArea": {
                                            "type": "number"
                                        },
                                        "winLossArea": {
                                            "type": "number"
                                        },
                                        "winLossPercent": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/waterSurface/timeSeries/{territoryType}": {
            "get": {
                "description": "Return the time series for the territory",
                "tags": [
                    "Water Surface"
                ],
                "summary": "Water Surface time series",
                "parameters": [
                    {
                        "name": "territoryType",
                        "in": "path",
                        "description": "Territory Type",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "code",
                        "in": "query",
                        "description": "Territory Code",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "x": {
                                            "type": "array",
                                            "items": {
                                                "type": "number"
                                            },
                                            "example": [
                                                1984,
                                                1985,
                                                1986,
                                                1987,
                                                1988
                                            ]
                                        },
                                        "y": {
                                            "type": "array",
                                            "items": {
                                                "type": "number",
                                                "example": 7794285.69
                                            },
                                            "example": [
                                                7794285.69,
                                                7947833.43,
                                                9010518.08,
                                                8857033.11,
                                                8962340.42
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}