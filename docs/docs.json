{
    "openapi": "3.0.0",
    "info": {
        "title": "Ora Hydric Documentation",
        "description": "This is an API for the Ora Hydric Module",
        "version": "1.0.0",
        "contact": {
            "email": "administrativo@geodatin.com"
        }
    },
    "servers": [
        {
            "url": "/api"
        }
    ],
    "components": {
        "schemas": {
            "geojson": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string"
                    },
                    "features": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "type": {
                                    "type": "string"
                                },
                                "geometry": {
                                    "type": "object",
                                    "properties": {
                                        "type": {
                                            "type": "string"
                                        },
                                        "coordinates": {
                                            "type": "array",
                                            "items": {
                                                "type": "number"
                                            }
                                        }
                                    }
                                },
                                "properties": {
                                    "type": "object",
                                    "properties": {
                                        "code": {
                                            "type": "string"
                                        },
                                        "publicationYear": {
                                            "type": "number"
                                        },
                                        "study": {
                                            "type": "string"
                                        },
                                        "author": {
                                            "type": "string"
                                        },
                                        "title": {
                                            "type": "string"
                                        },
                                        "state": {
                                            "type": "string"
                                        },
                                        "sampleNumber": {
                                            "type": "number"
                                        },
                                        "hgMin": {
                                            "type": "number"
                                        },
                                        "HgMax": {
                                            "type": "number"
                                        },
                                        "hgMean": {
                                            "type": "number"
                                        },
                                        "hgMedian": {
                                            "type": "number"
                                        },
                                        "collectionYear": {
                                            "type": "string"
                                        },
                                        "community": {
                                            "type": "string"
                                        },
                                        "measurementUnit": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "paths": {
        "/territory/{name}": {
            "get": {
                "tags": [
                    "Territory"
                ],
                "parameters": [
                    {
                        "name": "name",
                        "in": "path",
                        "description": "Search string for the territory",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "summary": "Search Territory",
                "description": "Search for the territory with like strings",
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "properties": {
                                            "name": {
                                                "type": "string"
                                            },
                                            "type": {
                                                "type": "string"
                                            },
                                            "code": {
                                                "type": "integer"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/waterSurface/statistics/{territoryType}": {
            "get": {
                "description": "Return the statistics for the territory",
                "tags": [
                    "Water Surface"
                ],
                "summary": "Water Surface statistics",
                "parameters": [
                    {
                        "name": "territoryType",
                        "in": "path",
                        "description": "Territory Type",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "code",
                        "in": "query",
                        "description": "Territory Code",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "currentArea": {
                                            "type": "number"
                                        },
                                        "winLossArea": {
                                            "type": "number"
                                        },
                                        "winLossPercent": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Code is required for city territory type!"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/waterSurface/timeSeries/{territoryType}": {
            "get": {
                "description": "Return the time series for the territory",
                "tags": [
                    "Water Surface"
                ],
                "summary": "Water Surface time series",
                "parameters": [
                    {
                        "name": "territoryType",
                        "in": "path",
                        "description": "Territory Type",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "code",
                        "in": "query",
                        "description": "Territory Code",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "x": {
                                            "type": "array",
                                            "items": {
                                                "type": "number"
                                            },
                                            "example": [
                                                1984,
                                                1985,
                                                1986,
                                                1987,
                                                1988
                                            ]
                                        },
                                        "y": {
                                            "type": "array",
                                            "items": {
                                                "type": "number",
                                                "example": 7794285.69
                                            },
                                            "example": [
                                                7794285.69,
                                                7947833.43,
                                                9010518.08,
                                                8857033.11,
                                                8962340.42
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Code is required for city territory type!"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/waterSurface/ranking/{territoryType}/{rankingType}": {
            "get": {
                "description": "Return the ranking for the territory",
                "tags": [
                    "Water Surface"
                ],
                "summary": "Water Surface ranking",
                "parameters": [
                    {
                        "name": "territoryType",
                        "in": "path",
                        "description": "Territory Type",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "rankingType",
                        "in": "path",
                        "description": "Ranking Type",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "area",
                                "winLoss"
                            ]
                        }
                    },
                    {
                        "name": "code",
                        "in": "query",
                        "description": "Territory Code",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "page",
                        "in": "query",
                        "description": "Ranking Page",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    },
                    {
                        "name": "pageSize",
                        "in": "query",
                        "description": "Ranking Page Size",
                        "required": false,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "x": {
                                            "type": "array",
                                            "items": {
                                                "type": "string"
                                            },
                                            "example": [
                                                "Barcelos (Brasil)",
                                                "Santar√©m (Brasil)",
                                                "Coari (Brasil)",
                                                "Presidente Figueiredo (Brasil)",
                                                "Parintins (Brasil)"
                                            ]
                                        },
                                        "series": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "id": {
                                                        "type": "string",
                                                        "example": "data"
                                                    },
                                                    "data": {
                                                        "type": "array",
                                                        "items": {
                                                            "type": "number"
                                                        },
                                                        "example": [
                                                            427080.15,
                                                            363226.22,
                                                            239112.49,
                                                            238116.35,
                                                            207305.45
                                                        ]
                                                    }
                                                }
                                            }
                                        },
                                        "position": {
                                            "type": "array",
                                            "items": {
                                                "type": "number"
                                            },
                                            "example": [
                                                1,
                                                2,
                                                3,
                                                4,
                                                5
                                            ]
                                        },
                                        "pages": {
                                            "type": "number",
                                            "example": 329
                                        },
                                        "focusPage": {
                                            "type": "number",
                                            "example": 119
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Code is required for city territory type!"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/mercury/{type}/points": {
            "get": {
                "tags": [
                    "Mercury"
                ],
                "description": "Get points of occurrences for mercury contamination",
                "summary": "Points of mercury contamination",
                "parameters": [
                    {
                        "name": "type",
                        "in": "path",
                        "description": "Human or Fish contamination",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "enum": [
                                "human",
                                "fish"
                            ]
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/geojson"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "Internal server error"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}